{
  "compilerOptions": {
    "target": "ES2020", // or "ES6" if needed
    "module": "ESNext", // ✅ Change from commonjs to ESNext
    "moduleResolution": "node", // ✅ Required for ESModules
    "resolveJsonModule": true, // ✅ For importing JSON
    "esModuleInterop": true,
    // "allowImportingTsExtensions": true, // ✅ Add this
    "noEmit": true, // ✅ Optional for ts-node to avoid writing files
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}